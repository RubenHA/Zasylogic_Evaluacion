@model ClienteModel[]
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header text-center h2">
        LISTADO DE CLIENTES ATENDIDOS
    </div>
    <div class="d-flex flex-row-reverse bd-highlight">
        <div class="p-2 bd-highlight">
            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#SQLPopup">Buscar</button>
        </div>
        <div class="p-2 bd-highlight">
            <input type="date">
        </div>
        <div class="p-2 bd-highlight">
            <input type="date">
        </div>
        <div class="p-2 bd-highlight">
            <label>Seleccione Rango de fechas: </label>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Apellidos</th>
                    <th class="text-center">Teléfono Celular</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Sexo</th>
                    <th class="text-center">Motivo</th>
                    <th class="text-center">Fecha</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.nombre</td>
                        <td>@item.apellidos</td>
                        <td>@item.celular</td>
                        <td>@item.email</td>
                        <td>@item.sexo</td>
                        <td>@item.motivo</td>
                        <td>@item.fecha</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="SQLPopup" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Acciones</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h4>Primera:</h4>
                <p>
                    SELECT * FROM ATENCION_CLIENTE WHERE fecha between _fechaInicial and _fechaFinal
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>